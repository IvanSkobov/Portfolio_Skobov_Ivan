# Портфолио — {{ profile.name }}

<div align="center">
  {% if profile.photo %}
  <img src="{{ profile.photo }}" alt="Profile photo" width="120" style="border-radius: 50%;">
  {% endif %}
  <h3>{{ profile.title }}</h3>
  {% if profile.location %}<p>{{ profile.location }}</p>{% endif %}
  <p>
    {% if profile.contacts.github %}<a href="{{ profile.contacts.github }}">GitHub</a>{% endif %}
    {% if profile.contacts.telegram %} • <a href="{{ profile.contacts.telegram }}">Telegram</a>{% endif %}
    {% if profile.contacts.email %} • <a href="mailto:{{ profile.contacts.email }}">{{ profile.contacts.email }}</a>{% endif %}
  </p>
</div>

